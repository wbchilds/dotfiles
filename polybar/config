cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%
format-prefix = ""

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = "ÔÑú"
format-prefix-background = ${colors.secondary}
format-prefix-foreground = ${colors.background}
format-prefix-padding = 3.5

